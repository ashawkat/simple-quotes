<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Simple Quote</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/css?family=Comfortaa:300,400,700" rel="stylesheet">
        <link rel="stylesheet" href="http://localhost:3000/css/style.css">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <h1>Simple Quote App with Node &amp; Express with Mongo DB</h1>
                </div>
                <div class="spacer"></div>
                <div class="col-md-6 col-md-offset-3">
                    <form action="quotes" method="post">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" placeholder="name" name="name" class="form-control" >
                        </div>
                        <div class="form-group">
                            <label for="quote">Quote:</label>
                            <input type="text" placeholder="quote" class="form-control" name="quote">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h2 class="quotes-head">Quotes by many people</h2>
                    <% if(messages.error) { %>
                    <div class="alert alert-warning">
                        <%= messages.error %>
                    </div>
                    <% } else if(messages.success) { %>
                    <div class="alert alert-success">
                        <%= messages.success %>
                    </div>
                    <% } %>
                    <table class="table quotes">
                        <thead>
                            <th>Name</th>
                            <th>Quote</th>
                            <th>Action</th>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<quotes.length; i++) {%>
                            <tr class="quote">
                                <td><strong><%= quotes[i].name %></strong></td>
                                <td><%= quotes[i].quote %></td>
                                <td>
                                    <a href="/update/<%= quotes[i]._id %>" id="<%= quotes[i]._id %>" class="click-data update-data" onclick="updateQuote(this)"><i class="fa fa-pencil-square-o fa-2x"></i>&nbsp;</a>
                                    <a href="/delete/<%= quotes[i]._id %>" id="<%= quotes[i]._id %>" class="click-data delete-data" onclick="updateQuote(this)"><i class="fa fa-trash-o fa-2x"></i></a>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <script src="js/main.js"></script>
    </body>
</html>
